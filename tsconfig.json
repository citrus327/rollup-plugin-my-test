{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es6", "DOM"],
    "module": "ESNext",
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2019"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "test/types"]
}